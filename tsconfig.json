{
  "compilerOptions": {
    "target": "ES6",                                  // Target ECMAScript version
    "module": "commonjs",                             // Use CommonJS for module resolution (Node.js default)
    "strict": true,                                   // Enable strict type-checking
    "esModuleInterop": true,                          // Enable compatibility for CommonJS modules
    "skipLibCheck": true,                             // Skip checking type declaration files
    "forceConsistentCasingInFileNames": true,         // Ensure consistent casing in imports
    "outDir": "./dist",                               // Output directory for compiled files
    "rootDir": "./src"                                // Root directory of TypeScript source files
  },
  "include": ["src/**/*"],                            // Include all files in the src folder
  "exclude": ["node_modules"]                         // Exclude node_modules folder
}
